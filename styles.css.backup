/* CSS Reset and Base Styles */
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
}

:root {
    /* Color Palette */
    --primary-color: #6366f1;
    --primary-dark: #4f46e5;
    --secondary-color: #f3f4f6;
    --accent-color: #f59e0b;
    --success-color: #10b981;
    --danger-color: #ef4444;
    --warning-color: #f59e0b;
    
    /* Text Colors */
    --text-primary: #111827;
    --text-secondary: #6b7280;
    --text-muted: #9ca3af;
    --text-white: #ffffff;
    
    /* Background Colors */
    --bg-primary: #ffffff;
    --bg-secondary: #f9fafb;
    --bg-card: #ffffff;
    --bg-overlay: rgba(0, 0, 0, 0.5);
    
    /* Border Colors */
    --border-color: #e5e7eb;
    --border-hover: #d1d5db;
    
    /* Shadows */
    --shadow-sm: 0 1px 2px 0 rgba(0, 0, 0, 0.05);
    --shadow-md: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    --shadow-lg: 0 10px 15px -3px rgba(0, 0, 0, 0.1), 0 4px 6px -2px rgba(0, 0, 0, 0.05);
    --shadow-xl: 0 20px 25px -5px rgba(0, 0, 0, 0.1), 0 10px 10px -5px rgba(0, 0, 0, 0.04);
    
    /* Typography */
    --font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    --font-size-xs: 0.75rem;
    --font-size-sm: 0.875rem;
    --font-size-base: 1rem;
    --font-size-lg: 1.125rem;
    --font-size-xl: 1.25rem;
    --font-size-2xl: 1.5rem;
    --font-size-3xl: 1.875rem;
    
    /* Spacing */
    --spacing-1: 0.25rem;
    --spacing-2: 0.5rem;
    --spacing-3: 0.75rem;
    --spacing-4: 1rem;
    --spacing-5: 1.25rem;
    --spacing-6: 1.5rem;
    --spacing-8: 2rem;
    --spacing-10: 2.5rem;
    --spacing-12: 3rem;
    --spacing-16: 4rem;
    
    /* Border Radius */
    --radius-sm: 0.25rem;
    --radius-md: 0.375rem;
    --radius-lg: 0.5rem;
    --radius-xl: 0.75rem;
    --radius-2xl: 1rem;
    
    /* Transitions */
    --transition-fast: 150ms ease-in-out;
    --transition-base: 200ms ease-in-out;
    --transition-slow: 300ms ease-in-out;
}

/* Base Styles */
body {
    font-family: var(--font-family);
    font-size: var(--font-size-base);
    line-height: 1.6;
    color: var(--text-primary);
    background-color: var(--bg-secondary);
    min-height: 100vh;
}

/* Layout Container */
.container {
    max-width: 1440px;
    margin: 0 auto;
    padding: var(--spacing-4);
    min-height: 100vh;
    display: grid;
    grid-template-rows: auto auto 1fr;
    gap: var(--spacing-6);
}

/* Header Styles */
.header {
    background: var(--bg-card);
    border-radius: var(--radius-xl);
    padding: var(--spacing-6);
    box-shadow: var(--shadow-sm);
    display: grid;
    grid-template-columns: 1fr auto;
    align-items: center;
    gap: var(--spacing-6);
}

.header__title {
    font-size: var(--font-size-3xl);
    font-weight: 700;
    color: var(--primary-color);
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
}

.header__title i {
    font-size: var(--font-size-2xl);
}

.header__stats {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: var(--spacing-6);
}

.stat {
    text-align: center;
    padding: var(--spacing-4);
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    transition: var(--transition-base);
}

.stat:hover {
    transform: translateY(-2px);
    box-shadow: var(--shadow-md);
}

.stat__number {
    display: block;
    font-size: var(--font-size-2xl);
    font-weight: 700;
    color: var(--primary-color);
    line-height: 1.2;
}

.stat__label {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    font-weight: 500;
}

/* Controls Section */
.controls {
    background: var(--bg-card);
    border-radius: var(--radius-xl);
    padding: var(--spacing-6);
    box-shadow: var(--shadow-sm);
    display: grid;
    grid-template-columns: auto 1fr auto;
    align-items: center;
    gap: var(--spacing-6);
}

.controls__left {
    display: flex;
    gap: var(--spacing-3);
}

.controls__center {
    display: flex;
    justify-content: center;
}

.controls__right {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
}

/* Search Container */
.search-container {
    position: relative;
    max-width: 400px;
    width: 100%;
}

.search-input {
    width: 100%;
    padding: var(--spacing-3) var(--spacing-12) var(--spacing-3) var(--spacing-10);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    transition: var(--transition-base);
    background: var(--bg-primary);
}

.search-input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.search-icon {
    position: absolute;
    left: var(--spacing-3);
    top: 50%;
    transform: translateY(-50%);
    color: var(--text-muted);
    pointer-events: none;
}

.search-container .btn--icon {
    position: absolute;
    right: var(--spacing-2);
    top: 50%;
    transform: translateY(-50%);
    opacity: 0;
    transition: var(--transition-base);
}

.search-input:not(:placeholder-shown) + .search-icon + .btn--icon {
    opacity: 1;
}

/* Filter Group */
.filter-group {
    display: flex;
    gap: var(--spacing-3);
}

.filter-select {
    padding: var(--spacing-3) var(--spacing-4);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    background: var(--bg-primary);
    color: var(--text-primary);
    font-size: var(--font-size-sm);
    transition: var(--transition-base);
    cursor: pointer;
}

.filter-select:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

/* View Toggle */
.view-toggle {
    display: flex;
    background: var(--bg-secondary);
    border-radius: var(--radius-lg);
    padding: var(--spacing-1);
}

.view-toggle__btn {
    padding: var(--spacing-2) var(--spacing-3);
    border: none;
    background: transparent;
    color: var(--text-secondary);
    border-radius: var(--radius-md);
    transition: var(--transition-base);
}

.view-toggle__btn.active {
    background: var(--primary-color);
    color: var(--text-white);
}

/* Button Styles */
.btn {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: var(--spacing-2);
    padding: var(--spacing-3) var(--spacing-5);
    border: none;
    border-radius: var(--radius-lg);
    font-size: var(--font-size-sm);
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: var(--transition-base);
    white-space: nowrap;
}

.btn--primary {
    background: var(--primary-color);
    color: var(--text-white);
    box-shadow: var(--shadow-sm);
}

.btn--primary:hover {
    background: var(--primary-dark);
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
}

.btn--secondary {
    background: var(--bg-secondary);
    color: var(--text-primary);
    border: 2px solid var(--border-color);
}

.btn--secondary:hover {
    background: var(--border-color);
    border-color: var(--border-hover);
}

.btn--danger {
    background: var(--danger-color);
    color: var(--text-white);
    box-shadow: var(--shadow-sm);
}

.btn--danger:hover {
    background: #dc2626;
    box-shadow: var(--shadow-md);
    transform: translateY(-1px);
}

.btn--icon {
    padding: var(--spacing-2);
    width: auto;
    height: auto;
    min-width: 2.5rem;
    min-height: 2.5rem;
}

/* Content Area */
.content {
    position: relative;
}

/* Books Container */
.books-container {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
    gap: var(--spacing-6);
    transition: var(--transition-base);
}

.books-container.list-view {
    grid-template-columns: 1fr;
    gap: var(--spacing-4);
}

/* Book Card */
.book-card {
    background: var(--bg-card);
    border-radius: var(--radius-xl);
    padding: var(--spacing-6);
    box-shadow: var(--shadow-sm);
    transition: var(--transition-base);
    position: relative;
    display: grid;
    grid-template-rows: auto 1fr auto;
    gap: var(--spacing-4);
}

.book-card:hover {
    box-shadow: var(--shadow-lg);
    transform: translateY(-2px);
}

.book-card__header {
    display: flex;
    align-items: flex-start;
    justify-content: space-between;
    gap: var(--spacing-3);
}

.book-card__title {
    font-size: var(--font-size-lg);
    font-weight: 600;
    color: var(--text-primary);
    line-height: 1.3;
    margin-bottom: var(--spacing-1);
}

.book-card__author {
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
    font-weight: 500;
}

.book-card__actions {
    display: flex;
    gap: var(--spacing-2);
    opacity: 0;
    transition: var(--transition-base);
}

.book-card:hover .book-card__actions {
    opacity: 1;
}

.book-card__body {
    display: grid;
    gap: var(--spacing-3);
}

.book-card__series {
    font-size: var(--font-size-sm);
    color: var(--primary-color);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
}

.book-card__series i {
    font-size: var(--font-size-xs);
}

.book-card__meta {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
    gap: var(--spacing-3);
}

.book-card__meta-item {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
}

.book-card__meta-label {
    font-size: var(--font-size-xs);
    color: var(--text-muted);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.book-card__meta-value {
    font-size: var(--font-size-sm);
    color: var(--text-primary);
    font-weight: 500;
}

.book-card__footer {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-4);
    padding-top: var(--spacing-3);
    border-top: 1px solid var(--border-color);
}

.book-card__status {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-2);
    padding: var(--spacing-2) var(--spacing-3);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-xs);
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.book-card__status--want-to-read {
    background: rgba(239, 68, 68, 0.1);
    color: var(--danger-color);
}

.book-card__status--currently-reading {
    background: rgba(245, 158, 11, 0.1);
    color: var(--warning-color);
}

.book-card__status--read {
    background: rgba(16, 185, 129, 0.1);
    color: var(--success-color);
}

.book-card__ratings {
    display: flex;
    align-items: center;
    gap: var(--spacing-4);
}

.rating-display {
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
}

.rating-display .stars,
.rating-display .hearts {
    display: flex;
    gap: 2px;
}

.rating-display .star {
    color: var(--accent-color);
    font-size: var(--font-size-sm);
}

.rating-display .star.empty {
    color: var(--border-color);
}

.rating-display .heart {
    color: var(--danger-color);
    font-size: var(--font-size-sm);
}

.rating-display .heart.empty {
    color: var(--border-color);
}

/* List View Styles */
.books-container.list-view .book-card {
    display: grid;
    grid-template-columns: auto 1fr auto auto;
    grid-template-rows: auto auto;
    gap: var(--spacing-4);
    align-items: center;
    padding: var(--spacing-4);
}

.books-container.list-view .book-card__header {
    grid-column: 1 / 2;
    grid-row: 1 / 3;
    flex-direction: column;
    align-items: flex-start;
    min-width: 200px;
}

.books-container.list-view .book-card__body {
    grid-column: 2 / 3;
    grid-row: 1 / 2;
}

.books-container.list-view .book-card__footer {
    grid-column: 3 / 4;
    grid-row: 1 / 2;
    border: none;
    padding: 0;
}

.books-container.list-view .book-card__actions {
    grid-column: 4 / 5;
    grid-row: 1 / 2;
    opacity: 1;
}

.books-container.list-view .book-card__meta {
    grid-template-columns: repeat(auto-fit, minmax(100px, 1fr));
    gap: var(--spacing-2);
}

/* Empty State */
.empty-state {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: var(--spacing-16);
    background: var(--bg-card);
    border-radius: var(--radius-xl);
    box-shadow: var(--shadow-sm);
}

.empty-state.hidden {
    display: none;
}

.empty-state__icon {
    font-size: 4rem;
    color: var(--text-muted);
    margin-bottom: var(--spacing-4);
}

.empty-state__title {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-2);
}

.empty-state__description {
    font-size: var(--font-size-base);
    color: var(--text-secondary);
    margin-bottom: var(--spacing-6);
}

/* Modal Styles */
.modal {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1000;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: var(--spacing-4);
    opacity: 0;
    visibility: hidden;
    transition: var(--transition-base);
}

.modal.active {
    opacity: 1;
    visibility: visible;
}

.modal__backdrop {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: var(--bg-overlay);
    transition: var(--transition-base);
}

.modal__content {
    position: relative;
    background: var(--bg-card);
    border-radius: var(--radius-2xl);
    box-shadow: var(--shadow-xl);
    max-width: 600px;
    width: 100%;
    max-height: 90vh;
    overflow-y: auto;
    transform: scale(0.95);
    transition: var(--transition-base);
}

.modal.active .modal__content {
    transform: scale(1);
}

.modal__content--small {
    max-width: 400px;
}

.modal__header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: var(--spacing-6);
    border-bottom: 1px solid var(--border-color);
}

.modal__title {
    font-size: var(--font-size-xl);
    font-weight: 600;
    color: var(--text-primary);
}

.modal__body {
    padding: var(--spacing-6);
}

.modal__footer {
    display: flex;
    align-items: center;
    justify-content: flex-end;
    gap: var(--spacing-3);
    padding: var(--spacing-6);
    border-top: 1px solid var(--border-color);
}

/* Form Styles */
.form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: var(--spacing-4);
}

.form-group {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
}

.form-group--full {
    grid-column: 1 / -1;
}

.form-label {
    font-size: var(--font-size-sm);
    font-weight: 500;
    color: var(--text-primary);
}

.form-input,
.form-select,
.form-textarea {
    padding: var(--spacing-3);
    border: 2px solid var(--border-color);
    border-radius: var(--radius-lg);
    font-size: var(--font-size-base);
    transition: var(--transition-base);
    background: var(--bg-primary);
}

.form-input:focus,
.form-select:focus,
.form-textarea:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(99, 102, 241, 0.1);
}

.form-textarea {
    resize: vertical;
    min-height: 80px;
}

/* Rating Input */
.rating-input {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-2);
}

.stars,
.hearts {
    display: flex;
    gap: var(--spacing-1);
}

.star,
.heart {
    font-size: var(--font-size-lg);
    cursor: pointer;
    transition: var(--transition-fast);
    color: var(--border-color);
}

.star:hover,
.star.active {
    color: var(--accent-color);
}

.heart:hover,
.heart.active {
    color: var(--danger-color);
}

/* Responsive Design */
@media (max-width: 1024px) {
    .header {
        grid-template-columns: 1fr;
        text-align: center;
        gap: var(--spacing-4);
    }
    
    .header__stats {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .controls {
        grid-template-columns: 1fr;
        gap: var(--spacing-4);
    }
    
    .controls__center {
        order: -1;
    }
    
    .controls__left,
    .controls__right {
        justify-content: center;
    }
    
    .filter-group {
        flex-wrap: wrap;
    }
}

@media (max-width: 768px) {
    .container {
        padding: var(--spacing-3);
        gap: var(--spacing-4);
    }
    
    .header,
    .controls {
        padding: var(--spacing-4);
    }
    
    .header__stats {
        grid-template-columns: repeat(4, 1fr);
        gap: var(--spacing-2);
    }
    
    .stat {
        padding: var(--spacing-2);
    }
    
    .stat__number {
        font-size: var(--font-size-xl);
    }
    
    .books-container {
        grid-template-columns: 1fr;
        gap: var(--spacing-4);
    }
    
    .form-grid {
        grid-template-columns: 1fr;
    }
    
    .modal__content {
        margin: var(--spacing-4);
        max-height: calc(100vh - 2rem);
    }
    
    .modal__header,
    .modal__body,
    .modal__footer {
        padding: var(--spacing-4);
    }
    
    .controls__left {
        flex-wrap: wrap;
    }
}

@media (max-width: 480px) {
    .header__title {
        font-size: var(--font-size-2xl);
    }
    
    .filter-group {
        display: grid;
        grid-template-columns: 1fr;
        gap: var(--spacing-2);
    }
    
    .book-card {
        padding: var(--spacing-4);
    }
    
    .book-card__meta {
        grid-template-columns: 1fr;
    }
    
    .book-card__footer {
        flex-direction: column;
        align-items: flex-start;
        gap: var(--spacing-3);
    }
}

/* Animations */
@keyframes fadeIn {
    from {
        opacity: 0;
        transform: translateY(10px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.book-card {
    animation: fadeIn 0.3s ease-out;
}

/* Print Styles */
@media print {
    .controls,
    .modal,
    .book-card__actions {
        display: none !important;
    }
    
    .books-container {
        display: block;
    }
    
    .book-card {
        break-inside: avoid;
        margin-bottom: var(--spacing-4);
        box-shadow: none;
        border: 1px solid var(--border-color);
    }
}

/* Accessibility */
@media (prefers-reduced-motion: reduce) {
    *,
    *::before,
    *::after {
        animation-duration: 0.01ms !important;
        animation-iteration-count: 1 !important;
        transition-duration: 0.01ms !important;
    }
}

/* Focus styles for accessibility */
.btn:focus-visible,
.form-input:focus-visible,
.form-select:focus-visible,
.form-textarea:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
}

/* High contrast mode support */
@media (prefers-contrast: high) {
    :root {
        --border-color: #000000;
        --text-secondary: #000000;
        --bg-secondary: #ffffff;
    }
}

/* Enhanced Modal Styles */
.modal__content--large {
    max-width: 800px;
}

/* Form Tabs */
.form-tabs {
    display: flex;
    border-bottom: 2px solid var(--border-color);
    margin-bottom: var(--spacing-6);
    gap: var(--spacing-2);
}

.form-tab {
    padding: var(--spacing-3) var(--spacing-5);
    border: none;
    background: transparent;
    color: var(--text-secondary);
    font-weight: 500;
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: var(--transition-base);
    white-space: nowrap;
}

.form-tab:hover {
    color: var(--text-primary);
    background: var(--bg-secondary);
}

.form-tab.active {
    color: var(--primary-color);
    border-bottom-color: var(--primary-color);
    background: var(--bg-secondary);
}

.form-tab-content {
    display: none;
}

.form-tab-content.active {
    display: block;
}

/* Enhanced Form Elements */
.form-checkbox {
    width: 1.2rem;
    height: 1.2rem;
    accent-color: var(--primary-color);
    margin-right: var(--spacing-2);
}

.form-label:has(.form-checkbox) {
    flex-direction: row;
    align-items: center;
    gap: var(--spacing-2);
    cursor: pointer;
    padding: var(--spacing-3);
    border-radius: var(--radius-lg);
    transition: var(--transition-base);
}

.form-label:has(.form-checkbox):hover {
    background: var(--bg-secondary);
}

/* Enhanced Book Card Styles */
.book-card__physical-features {
    display: flex;
    flex-wrap: wrap;
    gap: var(--spacing-2);
    margin-top: var(--spacing-3);
}

.book-card__feature {
    display: inline-flex;
    align-items: center;
    gap: var(--spacing-1);
    padding: var(--spacing-1) var(--spacing-2);
    background: var(--primary-color);
    color: var(--text-white);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: 500;
}

.book-card__feature--special {
    background: var(--accent-color);
}

.book-card__dates {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: var(--spacing-2);
    margin-top: var(--spacing-3);
    padding-top: var(--spacing-3);
    border-top: 1px solid var(--border-color);
    font-size: var(--font-size-sm);
}

.book-card__date {
    display: flex;
    flex-direction: column;
    gap: var(--spacing-1);
}

.book-card__date-label {
    color: var(--text-muted);
    font-size: var(--font-size-xs);
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.05em;
}

.book-card__date-value {
    color: var(--text-primary);
    font-weight: 500;
}

.book-card__publisher {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    margin-top: var(--spacing-2);
    font-size: var(--font-size-sm);
    color: var(--text-secondary);
}

.book-card__publisher i {
    color: var(--text-muted);
}

/* DNF Status Styling */
.book-card__status--dnf {
    background: rgba(156, 163, 175, 0.1);
    color: var(--text-secondary);
}

/* Enhanced Stats */
.header__stats {
    display: grid;
    grid-template-columns: repeat(5, 1fr);
    gap: var(--spacing-4);
}

/* Gifted Book Indicator */
.book-card__gifted {
    position: absolute;
    top: var(--spacing-3);
    right: var(--spacing-3);
    background: var(--success-color);
    color: var(--text-white);
    padding: var(--spacing-1) var(--spacing-2);
    border-radius: var(--radius-md);
    font-size: var(--font-size-xs);
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
}

/* Reading Progress Indicator */
.book-card__progress {
    margin-top: var(--spacing-2);
}

.book-card__progress-bar {
    width: 100%;
    height: 4px;
    background: var(--border-color);
    border-radius: var(--radius-sm);
    overflow: hidden;
}

.book-card__progress-fill {
    height: 100%;
    background: var(--primary-color);
    transition: var(--transition-base);
}

/* Enhanced Mobile Responsiveness */
@media (max-width: 768px) {
    .header__stats {
        grid-template-columns: repeat(3, 1fr);
        gap: var(--spacing-2);
    }
    
    .form-tabs {
        flex-wrap: wrap;
        gap: var(--spacing-1);
    }
    
    .form-tab {
        padding: var(--spacing-2) var(--spacing-3);
        font-size: var(--font-size-sm);
    }
    
    .book-card__physical-features {
        flex-direction: column;
        gap: var(--spacing-1);
    }
    
    .book-card__dates {
        grid-template-columns: 1fr;
    }
}

@media (max-width: 480px) {
    .header__stats {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .modal__content--large {
        margin: var(--spacing-2);
        max-height: calc(100vh - 1rem);
    }
}

/* Print Enhancements */
@media print {
    .book-card__physical-features,
    .book-card__dates,
    .book-card__publisher {
        display: block !important;
    }
    
    .book-card__feature {
        display: inline-block !important;
        margin-right: var(--spacing-2);
        margin-bottom: var(--spacing-1);
    }
}

/* Enhanced Accessibility */
.form-checkbox:focus {
    outline: 2px solid var(--primary-color);
    outline-offset: 2px;
}

.form-tab:focus-visible {
    outline: 2px solid var(--primary-color);
    outline-offset: -2px;
}

/* Loading States */
.loading {
    opacity: 0.7;
    pointer-events: none;
}

.loading::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 20px;
    height: 20px;
    margin: -10px 0 0 -10px;
    border: 2px solid var(--border-color);
    border-top-color: var(--primary-color);
    border-radius: 50%;
    animation: spin 1s linear infinite;
}

@keyframes spin {
    to {
        transform: rotate(360deg);
    }
}

/* Enhanced Book Card Layout for New Fields */
.book-card__extended-info {
    display: grid;
    gap: var(--spacing-3);
    margin-top: var(--spacing-4);
    padding-top: var(--spacing-4);
    border-top: 1px solid var(--border-color);
}

.book-card__info-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: var(--font-size-sm);
}

.book-card__info-label {
    color: var(--text-muted);
    font-weight: 500;
}

.book-card__info-value {
    color: var(--text-primary);
    font-weight: 500;
}

/* Special Edition Indicators */
.book-card__special-edition {
    background: linear-gradient(45deg, var(--accent-color), #f97316);
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
    font-weight: 700;
}
