# BookTracker Environment Configuration

# Application settings
APP_NAME=BookTracker
APP_VERSION=1.0.0
APP_DESCRIPTION=Personal Book Collection Manager

# Server settings
PORT=8080
NGINX_HOST=localhost
NGINX_PORT=80

# Security settings (for production)
# SSL_ENABLED=false
# SSL_CERT_PATH=/etc/ssl/certs/booktracker.crt
# SSL_KEY_PATH=/etc/ssl/private/booktracker.key

# Performance settings
NGINX_WORKER_PROCESSES=auto
NGINX_WORKER_CONNECTIONS=1024
GZIP_ENABLED=true
GZIP_COMP_LEVEL=6

# Health check settings
HEALTH_CHECK_INTERVAL=30s
HEALTH_CHECK_TIMEOUT=10s
HEALTH_CHECK_RETRIES=3

# Development settings
# ENABLE_DEBUG=false
# LOG_LEVEL=info
