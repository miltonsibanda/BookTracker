{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "install-deps",
			"type": "shell",
			"command": "chmod +x install-backend.sh && ./install-backend.sh",
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "install-backend-deps",
			"type": "shell",
			"command": "npm install",
			"options": {
				"cwd": "backend"
			},
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Install Backend Dependencies",
			"type": "shell",
			"command": "cd backend && npm install",
			"group": "build",
			"isBackground": false,
			"problemMatcher": []
		},
		{
			"label": "Test API Server",
			"type": "shell",
			"command": "cd backend && npm start",
			"group": "test",
			"isBackground": true,
			"problemMatcher": []
		}
	]
}